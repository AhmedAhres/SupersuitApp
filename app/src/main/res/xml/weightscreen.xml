<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="switch_suitcase"
        android:title="Turn off suitcase" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="switch_lock"
        android:title="Turn off lock" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_add_friends_to_messages"
        android:summary="Absolute speed" />
    <Preference
        android:selectable="false"
        android:enabled="true"
        android:key="example_key"
        android:title="Supersuit Jan"
        android:summary="Connected" />
    <Preference
        android:selectable="false"
        android:enabled="true"
        android:key="example_key"
        android:title="Supersuit HX3TW4"
        android:summary="Not Connected" />


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

</PreferenceScreen>
